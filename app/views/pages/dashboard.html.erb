<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#loadModal">
  Load Course
</button>

<!-- Modal -->
<div class="modal fade" id="loadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Load Course</h4>
      </div>
      <div class="modal-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class = "col-md-5">Name</th>
              <th class = "col-md-5"> Date Created</th>
            </tr>
          </thead>
          <% current_user.courses.each do |course| %>
          <tbody>
            <tr>
            <td><%= course.name%></td>
            <td> <%= course.created_at %></td>
            <td> <button type="button" id="loadButton" class="pull-right btn btn-primary">
                    Load Course
                  </button>
            </td>
          </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


